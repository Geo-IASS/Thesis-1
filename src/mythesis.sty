\usepackage{pgf-pie}
\usepackage{subfig}
\makeatletter
\newcounter{@sfcol}%
\newcounter{@sffig}%
\NewDocumentEnvironment{pieplots}{mm}{%
    \setcounter{@sfcol}{0}%
    \setcounter{@sffig}{0}%
    \setcounter{subfigure}{0}%
    %
    \def\@sfprefix{\hspace{\fill}}%
    \def\@sfsuffix{}%
    %
    \newcommand\pieplot[2]{%
        \@sfprefix%
        \subfloat[##1]{##2}%
        \@sfsuffix%
        %
        \def\@sfsuffix{}%
        \stepcounter{@sfcol}%
        \ifnum\value{@sfcol}=2%
            \def\@sfsuffix{\hspace*{\fill}}%
        \fi%
        \ifnum\value{@sfcol}=3%
            \setcounter{@sfcol}{0}%
            \stepcounter{@sffig}%
            \def\@sfprefix{%
                \caption[]{}%
                \label{#1:subfig\arabic{@sffig}}%
                \endfigure%
                \figure[H]%
                    \ContinuedFloat%
                    \hspace{\fill}%
            }%
        \fi%
    }%
    %
    \figure[H]%
}{%
        \caption{#2}%
        \label{#1}%
    \endfigure%
}
\makeatother
