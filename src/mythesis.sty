\makeatletter
\NewDocumentEnvironment{specifications}{mm}{%
    \def\@hline{}%
    %
    \newenvironment{specificationGroup}[1]{%
        \@hline \underline{##1} &%
        \def\@hline{\\}%
    }{%
        \def\@hline{\\[1em]}%
    }%
    \newcommand\specification[2]{%
        \@hline ##1 & ##2 %
        \def\@hline{\\}%
    }%
    %
    \begin{table}[H]%
        \centering
        \begin{tabular}{|+>{\bfseries}l|^p{8cm}|}%
            \tableHeader{Item & Specification}%
}{%
            \\\hline
        \end{tabular}%
        \caption{#2}%
        \label{#1}%
    \end{table}%
}
\makeatother

